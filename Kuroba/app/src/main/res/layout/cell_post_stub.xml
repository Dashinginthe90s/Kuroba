<com.github.adamantcheese.chan.ui.cell.PostStubCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="?backcolor"
    tools:ignore="UseCompoundDrawables,ContentDescription">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/options"
        android:ellipsize="end"
        android:padding="8dp"
        android:textColor="?android:textColorSecondary"
        tools:layout_centerVertical="true"
        tools:text="@string/lorem_ipsum"
        tools:textsize="8sp" />

    <ImageView
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ripple_item_background"
        android:padding="4dp"
        android:src="@drawable/ic_fluent_more_vertical_24_filled"
        app:tint="?android:textColorSecondary"
        tools:ignore="ContentDescription" />

</com.github.adamantcheese.chan.ui.cell.PostStubCell>
